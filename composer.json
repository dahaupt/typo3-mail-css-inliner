{
  "name": "pagemachine/typo3-mail-css-inliner",
  "description": "CSS inliner for the TYPO3 mailer ",
  "keywords": ["typo3", "mail", "css", "inline"],
  "type": "typo3-cms-extension",
  "license": "GPL-3.0-or-later",
  "authors": [
    {
      "name": "Mathias Brodala",
      "email": "mbrodala@pagemachine.de"
    }
  ],
  "require": {
    "php": "^7.0",
    "tijsverkoyen/css-to-inline-styles": "^2.2",
    "typo3/cms-core": "^7.6 || ^8.7"
  },
  "require-dev": {
    "cakephp/cakephp-codesniffer": "^3.0",
    "friendsofphp/php-cs-fixer": "^2.1",
    "jakub-onderka/php-console-highlighter": "^0.3.2",
    "jakub-onderka/php-parallel-lint": "^1.0",
    "nimut/testing-framework": "^4.0",
    "phpstan/phpstan": "^0.9.2",
    "phpunit/phpunit": "^6.5",
    "slevomat/coding-standard": "^4.0",
    "squizlabs/php_codesniffer": "^3.1"
  },
  "replace": {
    "mail_css_inliner": "self.version",
    "typo3-ter/mail-css-inliner": "self.version"
  },
  "config": {
    "sort-packages": true,
    "bin-dir": "bin"
  },
  "extra": {
    "typo3/cms": {
      "extension-key": "mail_css_inliner",
      "cms-package-dir": "{$vendor-dir}/typo3/cms",
      "web-dir": "web"
    }
  },
  "scripts": {
    "analyze:php": "phpstan analyse --ansi --no-progress --configuration=phpstan.neon --level=5 *.php Classes Tests",
    "lint:php": "parallel-lint --exclude bin --exclude vendor --exclude web .",
    "lint:style": "phpcs",
    "fix:style": "phpcbf",
    "lint": [
      "@lint:php",
      "@lint:style",
      "@analyze:php"
    ],
    "test:unit": "phpunit --colors=always",
    "test": [
      "@test:unit"
    ]
  },
  "autoload": {
    "psr-4": {
      "Pagemachine\\MailCssInliner\\": "Classes/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Pagemachine\\MailCssInliner\\Tests\\": "Tests/"
    }
  }
}
